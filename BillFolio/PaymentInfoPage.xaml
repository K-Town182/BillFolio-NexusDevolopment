<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BillFolio.PaymentInfoPage"
             Title="Payment Info"
             BackgroundColor="White">

	<ScrollView>
		<VerticalStackLayout Padding="20" Spacing="15">

			<Label Text="Enter Your Pay Dates" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />

			<Label Text="Start Date" FontSize="18" />
			<DatePicker x:Name="StartDatePicker" />

			<Label Text="End Date" FontSize="18" />
			<DatePicker x:Name="EndDatePicker" />

			<Label Text="Pay Amount" FontSize="18" />
			<Entry x:Name="PayAmountEntry" Placeholder="Enter Amount" Keyboard="Numeric" />

			<Button Text="Save Pay Information" Clicked="OnSavePaymentClicked" Margin="0,20,0,0" 
                    BackgroundColor="LightBlue" TextColor="White" CornerRadius="10" />
		</VerticalStackLayout>
	</ScrollView>
</ContentPage>
